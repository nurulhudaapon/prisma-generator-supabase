generator client {
  provider = "prisma-client-js"
}

generator supabase {
  provider    = "node ../../dist/generator.js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  // category  t_post_category
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

