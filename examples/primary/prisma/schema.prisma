generator client {
  provider = "prisma-client-js"
}

generator supabase {
  provider    = "node ../../dist/generator.js"
  previewFeatures = ["views", "multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["public", "private"]

}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]

  @@schema("private")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  category  t_post_category
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int

  @@schema("public")
}

view PostWithAuthor {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int

  @@schema("public")
}

enum t_post_category {
  NEWS
  REVIEW
  TECHNOLOGY

  @@schema("public")
}

